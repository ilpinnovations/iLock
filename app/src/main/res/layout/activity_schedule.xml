<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:fadeScrollbars="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="@string/title_schedule"
        android:textColor="@color/lbl_name"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dip" >

        <Button
            android:id="@+id/btnUnlockTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/btn_open"
            android:text="@string/btn_unlock_time"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/btnLockTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/btn_close"
            android:text="@string/btn_unlock_time"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule_select"
            android:layout_marginStart="20dp"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/cboxSunday"
            android:onClick="onCheckboxClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="SUNDAY" />

        <CheckBox
            android:id="@+id/cboxMonday"
            android:onClick="onCheckboxClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="MONDAY" />

        <CheckBox
            android:id="@+id/cboxTuesday"
            android:onClick="onCheckboxClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="TUESDAY" />

        <CheckBox
            android:id="@+id/cboxWednesday"
            android:onClick="onCheckboxClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="WEDNESDAY" />

        <CheckBox
            android:id="@+id/cboxThursday"
            android:onClick="onCheckboxClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="THURSDAY" />

        <CheckBox
            android:id="@+id/cboxFriday"
            android:onClick="onCheckboxClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="FRIDAY" />

        <CheckBox
            android:id="@+id/cboxSaturday"
            android:onClick="onCheckboxClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="SATURDAY" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSchedule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/bg_main"
        android:text="@string/btn_save_schedule"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"/>

</LinearLayout>
